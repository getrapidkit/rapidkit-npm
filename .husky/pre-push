# Run linting (only errors, not warnings)
echo "ğŸ“ Checking code style with ESLint..."
npm run lint -- --quiet || {
  echo "âŒ ESLint found errors. Please fix them before pushing."
  exit 1
}

# Run type checking
echo "ğŸ”§ Running TypeScript type checking..."
npm run typecheck || {
  echo "âŒ Type checking failed. Please fix type errors before pushing."
