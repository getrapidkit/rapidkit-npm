{
  "name": "rapidkit",
  "version": "0.13.0",
  "type": "module",
  "description": "Create RapidKit projects with a single command - The official CLI for RapidKit framework",
  "keywords": [
    "rapidkit",
    "cli",
    "create",
    "fastapi",
    "nestjs",
    "backend",
    "microservices",
    "generator",
    "scaffold"
  ],
  "author": "RapidKit Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getrapidkit/rapidkit-npm.git"
  },
  "bin": {
    "rapidkit": "dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run src/__tests__/e2e.test.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run format:check && npm test",
    "security": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "metrics": "npx tsx scripts/metrics.ts",
    "bundle-size": "npm run build && du -sh dist/ && ls -lh dist/",
    "quality": "npm run validate && npm run security && npm run metrics"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "execa": "^9.3.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.23",
    "nunjucks": "^3.2.4",
    "ora": "^8.0.1",
    "validate-npm-package-name": "^5.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.14.0",
    "@types/nunjucks": "^3.2.6",
    "@types/validate-npm-package-name": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
