[tool.poetry]
name = "{{ project_name }}"
version = "{{ app_version }}"
description = "{{ description }}"
authors = ["{{ author }} <you@example.com>"]
license = "{{ license }}"
packages = [{ include = "src" }]

[tool.poetry.scripts]
dev = "src.cli:dev"
start = "src.cli:start"
build = "src.cli:build"
test = "src.cli:test"
lint = "src.cli:lint"
format = "src.cli:format"
help = "src.cli:help_cmd"

[tool.poetry.dependencies]
python = "^3.11"
fastapi = "^0.119.0"
uvicorn = { extras = ["standard"], version = "^0.37.0" }
pydantic = "^2.12.0"
pydantic-settings = { version = "^2.11.0", extras = ["yaml"] }
# <<<inject:poetry-dependencies>>>

[tool.poetry.group.dev.dependencies]
pytest = "^8.4.0"
pytest-asyncio = "^0.24.0"
pytest-cov = "^6.1.0"
httpx = "^0.28.1"
ruff = "^0.14.0"
black = "^24.10.0"
isort = "^5.13.2"
mypy = "^1.13.0"
build = "^1.3.0"

# <<<inject:poetry-dev-dependencies>>>

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"
